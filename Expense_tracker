import csv
import os
from datetime import datetime

FILENAME = "expenses.csv"

# Initialize file with headers if not present
def init_file():
    if not os.path.exists(FILENAME):
        with open(FILENAME, mode='w', newline='') as file:
            writer = csv.writer(file)
            writer.writerow(["Date", "Category", "Amount", "Note"])

def add_expense():
    date = datetime.now().strftime("%Y-%m-%d %H:%M:%S")
    category = input("Enter category (e.g., Food, Rent, Travel): ")
    amount = input("Enter amount: ")
    note = input("Add a note (optional): ")

    with open(FILENAME, mode='a', newline='') as file:
        writer = csv.writer(file)
        writer.writerow([date, category, amount, note])
    print("‚úÖ Expense added!")

def view_expenses():
    with open(FILENAME, mode='r') as file:
        reader = csv.reader(file)
        next(reader)  # Skip header
        print("\nüìÑ All Expenses:")
        for row in reader:
            print(f"{row[0]} | {row[1]} | ${row[2]} | {row[3]}")

def total_expenses():
    total = 0
    with open(FILENAME, mode='r') as file:
        reader = csv.reader(file)
        next(reader)
        for row in reader:
            total += float(row[2])
    print(f"\nüí∞ Total Expenses: ${total:.2f}")

def main():
    init_file()
    while True:
        print("\n--- Personal Expense Tracker ---")
        print("1. Add Expense")
        print("2. View All Expenses")
        print("3. View Total Expenses")
        print("4. Exit")
        choice = input("Choose an option: ")

        if choice == '1':
            add_expense()
        elif choice == '2':
            view_expenses()
        elif choice == '3':
            total_expenses()
        elif choice == '4':
            print("üëã Exiting. Stay on budget!")
            break
        else:
            print("‚ùå Invalid choice. Try again.")

if __name__ == "__main__":
    main()
